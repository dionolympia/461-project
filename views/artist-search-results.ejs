<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Artists</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  <script type="text/javascript">
    function yourFunction() {
      let search = document.getElementsByName("keywords")[0].value;
      search = search.replace(/\s+/g, '-');
      let action_src = "http://localhost:3000/artist/search/" + search;
      your_form.action = action_src;
    }
  </script>
</head>

<body class="bg-light">
  <div class="text-center mt-5 mb-5 container">
    <div>
      <img class="p-4" src="/images/artist.png" alt="title" width="150" height="150" />
    </div>

    <h1 class="display-3">Artists</h1>

    <div class="container">
      <div class="row">
        <div class="col-sm-2">
          <a href="/artist/letter/A">
            <a href="http://localhost:3000/artist/search/<%= currartist %>/<%=parseInt(pagenumber,10) - 1%>">
              <li class="list-group-item">Previous page</li>
            </a>
          </a>
        </div>
        <div class="col-sm-2">
        </div>
        <div class="col-sm-2">
        </div>
        <div class="col-sm-2">
        </div>
        <div class="col-sm-2">
        </div>
        <div class="col-sm-2">
          <a href="http://localhost:3000/artist/search/<%= currartist %>/<%=parseInt(pagenumber,10) + 1%>">
            <li class="list-group-item">Next page</li>
          </a>
        </div>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">artist</th>
      </thead>
      <tbody>
        <% artists.forEach(function(song) { %>
        <tr>
          <td><a href="http://localhost:3000/artist/specific/<%= song.artist %>" target="_parent" id="specific_artist_search" name="artist-name" onclick="return test()"><%= song.artist %></a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>

  </div>

  <footer class="bg-dark mt-5" id="sticky-footer" style="height:10em;">
    <p class="text-light text-center">Copyright Â© 2019 - Dion Olympia & Henry Nguyen - All Rights Reserved</p>
    <br />
    <div class="text-center">
      <a class="text-white" href="/home">Go back to homepage</a>
    </div>
  </footer>

</body>

</html>
